<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/small">

    <com.ramotion.foldingcell.FoldingCell

        android:id="@+id/folding_cell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        folding-cell:animationDuration="500"
        folding-cell:backSideColor="@color/dark_grey"
        folding-cell:cameraHeight="30"
        folding-cell:additionalFlipsCount="0"
        android:clipChildren="false"
        android:clipToPadding="false">

        <LinearLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_text"
                android:text="Material Required in Field Condition"
                android:padding="@dimen/small"
                android:textColor="@android:color/white"
                android:gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/usual"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Item Number"
                        style="@style/TableHeader"
                        android:textColor="@android:color/white"/>

                    <TextView
                        style="@style/TableHeader"
                        android:layout_weight="2"
                        android:text="Ingredients"
                        android:textColor="@android:color/white"/>

                    <TextView
                        style="@style/TableHeader"
                        android:text="Weight\nkg/m3"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="1"
                        style="@style/TableData"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:layout_weight="2"
                        android:text="Cement"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:id="@+id/cement_weight"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="2"
                        style="@style/TableData"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:layout_weight="2"
                        android:text="Coarse Aggregate"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:id="@+id/ca_weight"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="3"
                        style="@style/TableData"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:layout_weight="2"
                        android:text="Fine Aggregate"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:id="@+id/fa_weight"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="4"
                        style="@style/TableData"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:layout_weight="2"
                        android:text="Water"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                    <TextView
                        style="@style/TableData"
                        android:id="@+id/water_weight"
                        android:textColor="@android:color/white"
                        android:gravity="center_horizontal"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@android:color/white"/>

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Detail"
                android:id="@+id/detail"/>



        </LinearLayout>
        ​
        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:padding="@dimen/large"
                android:textSize="@dimen/large_text"/>
        </FrameLayout>
        ​
    </com.ramotion.foldingcell.FoldingCell>

</android.support.v7.widget.CardView>


